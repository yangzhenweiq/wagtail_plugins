# wagtail deployment

---
apiVersion: apps/v1
kind: Deployment
metadata:
  name: wagtail
  labels:
    app.kubernetes.io/name: wagtail
spec:
  selector:
    matchLabels:
      app.kubernetes.io/name: wagtail
  strategy:
    type: Recreate
  template:
    metadata:
      labels:
        app.kubernetes.io/name: wagtail
    spec:
      containers:
        - name: wagtail
          image: {{ WAGTAIL_DOCKER_IMAGE_SERVER }}
          command: ["python"]
          args: ["manage.py", "runserver", "0.0.0.0:8006"]
          ports:
            - containerPort: 8006
          volumeMounts:
            - mountPath: /wagtail_site/wagtail_site/settings/
              name: settings
      volumes:
        - name: settings
          configMap:
            name: wagtail-settings  
